@model DemoStore_Admin.Models.ViewMainPageModel

@{
    ViewBag.Title = "Settings";

    <link href="~/Content/styles.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"></script>
}




<body style="color: #ffffff;
        background: #3598dc">
    <div >
        <div class="login-form">
            @using (Html.BeginForm("Settings", "Home", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                 @Html.HiddenFor(model => model.Id)
                <h2 class="text-center">Edit Account.</h2>
                <hr />

                <div class="form-group has-error">
                    @Html.DisplayNameFor(model => model.UserName)

                    @Html.TextBoxFor(model => model.UserName, new { @class = "customselect form-control has-error" })

                </div>
                <div class="form-group has-error">
                    @Html.DisplayNameFor(model => model.Role)
                    @Html.DropDownListFor(model => model.Role, new SelectList(ViewBag.VbCategoryList, "Value", "Text"), new { @class = "customselect form-control has-error" })



                </div>
               



                <div class="form-group has-error">
                    @Html.DisplayNameFor(model => model.Email)
                    @Html.TextBoxFor(model => model.Email, new { @class = "customselect form-control has-error" })
                </div>



                <div class="form-group has-error">
                    @Html.DisplayNameFor(model => model.PhoneNumber)
                    @Html.TextBoxFor(model => model.PhoneNumber, new { @class = "customselect form-control has-error" })
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" class="btn btn-primary btn-lg btn-block" value="Save" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        @Html.ActionLink("Back to List", "Index")
                    </div>
                </div>


                <p>

                </p>
            }
        </div>


    </div>

</body>